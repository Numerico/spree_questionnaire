<% if ff.object.instance_of? QuestionOptionInteger %>
  <%= ff.input :answer, :as => :integer  %>
<% elsif ff.object.instance_of?(QuestionOptionArray) %>
  <%= ff.input :answer, :collection => ff.object.value %>
<% elsif ff.object.instance_of?(QuestionOptionHash) %>
  <%= ff.input :answer, :collection => ff.object.value, :label_method => :second, :value_method => :first %>
<% else %>
  <%= ff.input :answer %>
<% end %>
